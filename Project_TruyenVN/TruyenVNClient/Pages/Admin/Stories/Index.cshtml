@page
@model TruyenVNClient.Pages.Admin.Stories.IndexModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <a class="btn btn-info text-white">+ Create</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Story Id</th>
                <th>Story Name</th>
                <th>Story Image</th>
                <th>Author</th>
                <th>View</th>
                <th>Create</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model.ListStories)
            {
                <tr>
                    <td>@item.story_id</td>
                    <td>@item.story_name</td>
                    <td><img height="150" width="150" src="@item.story_image" /></td>
                    <td>@item.Authors.author_name</td>
                    <td>@item.View</td>
                    <td>@item.create_at</td>
                    <td>@item.update_at</td>

                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">

            <li class="page-item prev">
                <a class="page-link" href="javascript:void(0);">
                    <i class="tf-icon bx bx-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.count; i++)
            {
                <li class="page-item ">
                    <a class="page-link" href="">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
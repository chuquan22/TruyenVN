@page
@model TruyenVNClient.Pages.Admin.Reports.IndexModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <center><p class="text-success">@ViewData["success"]</p></center>
    <center><p class="text-danger">@ViewData["error"]</p></center>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Report Id</th>
                <th>Chapter Name</th>
                <th>Story Name</th>
                <th>User Report</th>
                <th>Message</th>
                <th>Send At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model.ListReport)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Chapters.title</td>
                    <td>@item.Chapters.Stories.story_name</td>
                    <td>@item.Users.Name</td>
                    <td>@item.message</td>
                    <td>@item.send_at</td>
                    <td>
                        <a class="btn btn-danger" asp-page-handler="Remove" asp-route-id="@item.user_id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
